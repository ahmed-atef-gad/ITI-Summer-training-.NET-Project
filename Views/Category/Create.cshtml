@model Category

<style>
    body {
        background-color: #f8f9fa;
    }

    .category-header {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .category-form-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 30px 40px;
        margin: 40px auto;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #2d3748;
    }

    .form-control {
        border-radius: 0.375rem;
        border: 1px solid #ced4da;
        padding: 0.5rem 0.75rem;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #38c172;
            box-shadow: 0 0 0 0.2rem rgba(56,193,114,.25);
            outline: none;
        }

    .btn-success {
        background-color: #38c172;
        border-color: #38c172;
        font-weight: 600;
        padding: 0.5rem 2rem;
        border-radius: 0.375rem;
    }

        .btn-success:hover {
            background-color: #2fa360;
            border-color: #2fa360;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: 600;
        padding: 0.5rem 2rem;
        border-radius: 0.375rem;
    }

        .btn-secondary:hover {
            background-color: #565e64;
            border-color: #565e64;
        }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .gap-3 {
        gap: 1rem;
    }

    .my-5 {
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    h2.text-success {
        color: #38c172 !important;
        font-weight: 700;
        letter-spacing: 1px;
    }

    hr {
        border-top: 2px solid #38c172;
        width: 60%;
        margin: 0 auto;
    }
</style>

<div class="d-flex justify-content-center category-header">
    <h2 class="text-success">Add New Category</h2>
</div>

<div class="category-form-container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Create">

        <div class="form-group mt-5">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3 m-5">
            <input type="submit" value="Add Category" class="btn btn-success" />
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>

    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}