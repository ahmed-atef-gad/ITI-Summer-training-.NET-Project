@model IEnumerable<Category>

<style>
    body {
        background-color: #f8f9fa;
    }

    .categories-header {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .categories-table-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 30px 40px;
        margin-bottom: 40px;
    }

    .table th, .table td {
        vertical-align: middle !important;
    }

    .table thead th {
        background-color: #198754;
        color: #fff;
        border: none;
    }

    .table tfoot {
        background: none;
        border-top: none;
    }

    .btn {
        min-width: 80px;
    }

    .btn-success {
        font-weight: 500;
    }

    .table tr {
        transition: background 0.2s;
    }

    .table tbody tr:hover {
        background-color: #e9f7ef;
    }
</style>

<div class="d-flex justify-content-center categories-header">
    <h2 class="text-success">Categories Portal</h2>
</div>

<div class="categories-table-container mx-auto" style="max-width: 1100px;">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(c => c.CategoryId)</th>
                <th scope="col">@Html.DisplayNameFor(c => c.Name)</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryId</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="Details" asp-route-Id="@item.CategoryId" class="btn btn-primary mx-2">View</a>
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.CategoryId" class="btn btn-secondary mx-2">Edit</a>
                        <form asp-controller="Category" asp-action="Delete" asp-route-Id="@item.CategoryId" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')" style="display: inline-block">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-success">Add Category</a>
                </td>
            </tr>
        </tfoot>
    </table>
</div>