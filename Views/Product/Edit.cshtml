@model Product

<style>
    body {
        background-color: #f8f9fa;
    }

    .products-header {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .products-form-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 30px 40px;
        margin: 40px auto;
        max-width: 600px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #2d3748;
    }

    .form-control {
        border-radius: 0.375rem;
        border: 1px solid #ced4da;
        padding: 0.5rem 0.75rem;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #38c172;
            box-shadow: 0 0 0 0.2rem rgba(56,193,114,.25);
            outline: none;
        }

    .btn-success {
        background-color: #38c172;
        border-color: #38c172;
        font-weight: 600;
        padding: 0.5rem 2rem;
        border-radius: 0.375rem;
    }

        .btn-success:hover {
            background-color: #2fa360;
            border-color: #2fa360;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: 600;
        padding: 0.5rem 2rem;
        border-radius: 0.375rem;
    }

        .btn-secondary:hover {
            background-color: #565e64;
            border-color: #565e64;
        }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .gap-3 {
        gap: 1rem;
    }

    .my-5 {
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    h2.text-success {
        color: #38c172 !important;
        font-weight: 700;
        letter-spacing: 1px;
    }

    hr {
        border-top: 2px solid #38c172;
        width: 60%;
        margin: 0 auto;
    }
</style>

<div class="d-flex justify-content-center products-header">
    <h2 class="text-success">Edit Product</h2>
</div>

<div class="products-form-container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Upload Image</label>
            <input class="form-control" type="file" name="imageFile" />
            @if (!string.IsNullOrEmpty(Model.ImagePath) && System.IO.File.Exists(Context.RequestServices.GetService<IWebHostEnvironment>().WebRootPath + Model.ImagePath.Replace("~", "")))
            {
                <div class="mt-2">
                    <img src="@Url.Content(Model.ImagePath)" alt="Product Image" style="max-width: 120px; max-height: 120px;" />
                </div>
            }
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-items="ViewBag.Categories" asp-for="CategoryId" class="form-control">
                <option value=""> -- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3 my-5">
            <input type="submit" value="Save Changes" class="btn btn-success" />
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}