@model IEnumerable<Product>

<style>
    body {
        background-color: #f8f9fa;
    }
    .products-header {
        margin-top: 30px;
        margin-bottom: 20px;
    }
    .products-table-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 30px 40px;
        margin-bottom: 40px;
    }
    .table th, .table td {
        vertical-align: middle !important;
    }
    .table thead th {
        background-color: #198754;
        color: #fff;
        border: none;
    }
    .table tfoot {
        background: none;
        border-top: none;
    }
    .btn {
        min-width: 80px;
    }
    .btn-success {
        font-weight: 500;
    }
    .table tr {
        transition: background 0.2s;
    }
    .table tbody tr:hover {
        background-color: #e9f7ef;
    }
</style>

<div class="d-flex justify-content-center products-header">
    <h2 class="text-success">Products Portal</h2>
</div>

<div class="products-table-container mx-auto" style="max-width: 1400px;">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(p => p.ProductId)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Title)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Price)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Description)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Quantity)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Category)</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ProductId</th>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-Id="@item.ProductId" class="btn btn-primary mx-2">View</a>
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@item.ProductId" class="btn btn-secondary mx-2">Edit</a>
                        <form asp-controller="Product" asp-action="Delete" asp-route-Id="@item.ProductId" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')" style="display: inline-block">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7" class="text-end">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-success">Add Product</a>
                </td>
            </tr>
        </tfoot>
    </table>
</div>